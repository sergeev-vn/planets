.logo {
  text-transform: uppercase;
  font-family: 'Proxima Nova Bl';
  font-weight: 900;
  display: inline-block;
  display: flex;
  align-items: center;
}

.logo__icon {
  width: 65px;
  height: 65px;
}

.logo__icon-pic {
  width: 100%;
  height: 100%;
}

.logo__text {
  margin-left: 15px;
  font-family: 'Proxima Nova Lt';
  font-weight: 600;
  font-size: 18px;
  letter-spacing: 1.5px;
  line-height: 1.2;

  &_color {
    color: $logo;
    font-family: 'Proxima Nova ExCn Lt';
    font-weight: 600;
    font-size: 19px;
    letter-spacing: normal;
  }
}